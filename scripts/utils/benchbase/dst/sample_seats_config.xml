<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>${DSTDB_BENCHBASE_TYPE}</type>
    <driver>${DSTDB_JDBC_DRIVER}</driver>
    <url>${DSTDB_JDBC_URL_BENCHBASE}</url>
    <username>${DSTDB_ARC_USER}</username>
    <password>${DSTDB_ARC_PW}</password>
    <isolation>${DSTDB_JDBC_ISOLATION}</isolation>
    <batchsize>128</batchsize>

    <!-- Scalefactor in SEATS scales by *1000 the number of customers-->
    <scalefactor>${workload_size_factor_bb}</scalefactor>

    <!-- The workload -->
    <terminals>${workload_threads}</terminals>
    <works>
        <work>
            <time>${workload_timer}</time>
            <rate>${workload_rate_bb}</rate>
            <weights>10, 0, 0, 20, 10, 15</weights>
            <!-- <weights>10, 10, 35, 20, 10, 15</weights> -->
        </work>
    </works>

    <!-- SEATS Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>DeleteReservation</name>
        </transactiontype>
        <transactiontype>
            <name>FindFlights</name>
        </transactiontype>
        <transactiontype>
            <name>FindOpenSeats</name>
        </transactiontype>
        <transactiontype>
            <name>NewReservation</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateCustomer</name>
        </transactiontype>
        <transactiontype>
            <name>UpdateReservation</name>
        </transactiontype>
    </transactiontypes>
</parameters>
